@model IEnumerable<FA.JustBlog.Core.Models.Posts>
@{
    ViewData["Title"] = "Home";
}

@foreach(var item in Model)
{
<!-- Post preview-->
<div class="post-preview">
<a asp-controller="Post" asp-action="Details" asp-route-year="@item.PostedOn.Year" asp-route-month="@item.PostedOn.Month" asp-route-title="@item.UrlSlug">
    <h2 class="post-title">@item.Title</h2>
    <h3 class="post-subtitle">@item.ShortDescription</h3>
</a>
<p class="post-meta">
    Posted
    on @item.PostedOn.GetPrettyDate() with rate of @item.TotalRate from @item.ViewCount view(s)
</p>
</div>
<!-- Divider-->
<hr class="my-4" />
}
<!-- Pager-->
<div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" asp-controller="Post" asp-action="Index">Older Posts →</a></div>